pngquant-bin_skip_binaries=true
optipng-bin_skip_binaries=true
jpegtran-bin_skip_binaries=true
gifsicle_skip_binaries=true
sharp_libvips_binary_host=https://npmmirror.com/mirrors/sharp-libvips
